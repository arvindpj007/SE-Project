<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.androidhive.firebase.Transac">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="35dp"
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:text="enter the details of new transaction"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"

            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">


           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Amount"
               android:inputType="number"
               android:id="@+id/addTransAmt"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Shop Name"
                android:id="@+id/addShopName" />

            <Spinner
                android:id="@+id/spinTrans"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>

            <DatePicker
                android:id="@+id/dateTrans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                android:spinnersShown="true">
            </DatePicker>


            <Button
                android:id="@+id/btAddTransaction"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"

                android:text="Add Transaction"
                android:textColor="@android:color/black"
                android:textStyle="bold" />




        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>